{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",  // Use ESNext to support ES Modules
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
